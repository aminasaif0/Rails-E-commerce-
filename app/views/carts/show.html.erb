<h1>Your Cart</h1>

<% @cart_items.each do |cart_item| %>
  <div class="cart-item">
    <h2><%= cart_item.product.name %></h2>
    <p><strong>Quantity:</strong> <%= cart_item.quantity %></p>
    <p><strong>Price:</strong> <%= number_to_currency(cart_item.product.price * cart_item.quantity, unit: "PKR", precision: 2) %></p>

    <%= button_to 'Remove from Cart', cart_item_path(cart_item), method: :delete, data: { confirm: 'Are you sure?' }, class: 'remove-from-cart' %>
  </div>
<% end %>

<%= link_to 'Back to Products', products_path %>
