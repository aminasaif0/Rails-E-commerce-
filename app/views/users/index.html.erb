<h1>User List</h1>

<table>
  <thead>
    <tr>
      <th>Email</th>
      <th>Roles</th>
    </tr>
  </thead>
  <tbody>
    <% @users.each do |user| %>
      <tr>
        <td><%= user.email %></td>
        <td><%= user.roles.pluck(:name).join(', ') %></td>
      </tr>
    <% end %>
  </tbody>
</table>
<%= link_to 'Back to Product List', products_path %>
